<%- include('head', {title: 'Home' }); %>

  <body class="bg-gray-600 text-white">
    <div>
      <%- include('header') %>
    </div>

    <div class="flex flex-col text-center py-6" style="background-color:#361c47">
      <div class="mx-auto">
        <img class="max-h-32" src="https://aniapi.com/img/aniapi_logo.png">
      </div>
      <h3 class="hidden sm:flex mx-auto font-light">Your favourite anime WebAPI â™¥</h3>
      <h4 class="flex mx-auto text-xs font-extralight">(not actually AniAPI)</h4>
    </div>

    <div class="mx-auto w-3/4 sm:w-3/4 lg:w-1/2 mt-4 rounded-lg px-2 py-2 bg-gray-500 flex flex-col flex flex-col">
      <div class="text-center mx-auto">
        <h3>
          <%- include('datetime-london') %> (UTC +0)
        </h3>
        <h1 class="hidden sm:contents font-bold text-white">Hello World! The animes of today are:</h1>
        <h1 class="contents sm:hidden font-bold text-white">Schedule:</h1>
        <p>(may change since release date)</p>
      </div>
      <div class="text-center mx-auto">

        <table>
          <% for( let i=0; i < data.data.count; i++ ) { %>
            <tr>
              <td>
                <a href="shows/<%= data.data.documents[i].id %>" data-preview-image="<%= data.data.documents[i].cover_image %>"
                  class="text-center text-slate-300 hover:text-purple-400 border-b"
                  ><%= data.data.documents[i].titles.en ?? data.data.documents[i].titles[Object.keys(data.data.documents[i].titles)[0]] %>
                </a><br>
              </td>
            </tr>
          <% } %>
        </table>

      </div>
      <span class="hidden sm:inline font-semibold text-center">You can check all our shows in the <a href="/shows" class="font-bold pointer text-black underline underline-offset-1"
        >SHOWS</a>
        section!
      </span>
      <span class="sm:hidden inline font-semibold text-center"
        >Check also the <a href="/shows" class="border-b font-bold pointer text-blue-400"
        >SHOWS</a> section!
      </span>
    </div>
  </body>